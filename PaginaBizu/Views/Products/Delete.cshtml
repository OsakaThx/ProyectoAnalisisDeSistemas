@model PaginaBizu.Models.Product
@{
    ViewData["Title"] = "Eliminar producto";
}

<h1>Eliminar producto</h1>
<h3>¿Estás seguro de que deseas eliminar este producto?</h3>

<div>
    <h4>Detalles del producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.NombreArticulo)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.NombreArticulo)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.CantidadDisponible)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.CantidadDisponible)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Precio)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Precio)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Descripcion)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Descripcion)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.ImagenUrl)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.ImagenUrl)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Categoria)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Categoria)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.FechaCreacion)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.FechaCreacion)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
