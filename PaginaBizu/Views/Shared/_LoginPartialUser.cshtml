@* No uses @model si no necesitas datos directamente *@
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<link rel="stylesheet" href="~/css/glow-form.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<!-- Contenedor para centrar login -->
<div class="login-container-small">
    <div class="login-form-small">
        <div class="text">INICIAR SESIÓN</div>

        @if (!SignInManager.IsSignedIn(User))
        {
            <form method="post" asp-controller="Account" asp-action="Login">
                @Html.AntiForgeryToken()

                <div class="field">
                    <span class="fas fa-envelope"></span>
                    <input id="email" name="Email" type="email" placeholder="Correo electrónico" required />
                </div>

                <div class="field">
                    <span class="fas fa-lock"></span>
                    <input id="password" name="Password" type="password" placeholder="Contraseña" required />
                </div>

                <div class="field-check">
                    <input id="remember" name="RememberMe" type="checkbox" />
                    <label for="remember">Recordarme</label>
                </div>

                <button type="submit">Entrar</button>
            </form>

            <div class="link">
                ¿No tienes cuenta?
                <a asp-controller="Account" asp-action="SingIn">Registrarse</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
